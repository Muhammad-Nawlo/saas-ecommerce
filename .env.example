APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_READ_HOST=  (optional; read replica, comma-separated)
# DB_WRITE_HOST= (optional; primary for writes)
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

# For horizontal scaling use redis (shared across app nodes). Do not use file.
SESSION_DRIVER=database
# SESSION_DRIVER=redis
# SESSION_CONNECTION=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
# Production multi-node: use s3 (or S3-compatible). Local disk not shared across nodes.
FILESYSTEM_DISK=local
# FILESYSTEM_DISK=s3
# Queue: use database for local. Production must use redis for reliability.
# Financial listeners (payment, refund, order lock) must not depend on DB queue in production; use QUEUE_CONNECTION=redis and Horizon recommended.
QUEUE_CONNECTION=database

# For horizontal scaling use redis. Do not use file for production multi-node.
CACHE_STORE=database
# CACHE_STORE=redis
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# When true, block all write operations (POST/PUT/PATCH/DELETE). For maintenance/incident response.
# SYSTEM_READ_ONLY=false

# Tenancy: central app domains (comma-separated). Tenant routes are blocked on these.
CENTRAL_DOMAINS=sass-ecommerce.test,127.0.0.1,localhost

# Stripe (landlord billing)
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

VITE_APP_NAME="${APP_NAME}"
