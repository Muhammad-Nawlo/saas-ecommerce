# Production environment template. Copy to .env and set values.
# See docs/DEPLOYMENT_CHECKLIST.md and docs/REDIS_SETUP.md.

APP_NAME="SaaS Ecommerce"
APP_ENV=production
APP_KEY=base64:...
APP_DEBUG=false
APP_URL=https://your-app.com

APP_MAINTENANCE_DRIVER=file

LOG_CHANNEL=stack
LOG_STACK=daily
LOG_LEVEL=warning

# Database (central)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=...
DB_USERNAME=...
DB_PASSWORD=...

# Session & cache: Redis required for horizontal scale
SESSION_DRIVER=redis
CACHE_STORE=redis

# Queue: Redis required; run Horizon (php artisan horizon)
QUEUE_CONNECTION=redis

# Redis (queue, cache, session)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
# REDIS_QUEUE_CONNECTION=default
# REDIS_QUEUE_RETRY_AFTER=90

# Tenancy: central app domains (comma-separated)
CENTRAL_DOMAINS=admin.your-app.com,landlord.your-app.com

# Stripe
STRIPE_KEY=pk_live_...
STRIPE_SECRET=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
